{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Agent": {
    "EnableDebugMode": true,
    "MaxRetries": 5,
    "TimeoutSeconds": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=trainingagent-dev.db"
  },
  "Features": {
    "EnableMetrics": true,
    "EnableHealthChecks": true,
    "EnableSwagger": true
  }
}
